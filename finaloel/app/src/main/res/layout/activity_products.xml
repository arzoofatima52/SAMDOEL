<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Products">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EA80FC"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="157dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_marginLeft="70"
            android:layout_marginTop="40"
            android:text="TextView"
            android:textColor="#7B1FA2"
            android:textSize="34sp"
            tools:text="PRODUCTS LIST" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="322dp"
            android:layout_height="31dp"
            android:layout_marginLeft="100"
            android:text="USERNAME "
            android:textSize="24sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="208dp"
            android:layout_height="70dp"
            android:layout_marginLeft="100"
            android:layout_marginTop="30"
            android:text="Add Product" />

        <Button
            android:id="@+id/button4"
            android:layout_width="214dp"
            android:layout_height="77dp"
            android:layout_marginLeft="100"
            android:layout_marginTop="20"
            android:text="CheckOut" />

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="354dp"
            android:layout_marginTop="10"
            android:listSelector="@color/purple_500">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/btn_star_big_on" />
        </ListView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>